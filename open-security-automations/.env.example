# Wildbox Open Security Automations Environment Configuration
# Copy this file to .env and customize the values for your environment

# =============================================================================
# n8n Configuration
# =============================================================================

# Basic Authentication (recommended for production)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=  # REQUIRED: set a strong password

# n8n Server Configuration
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_LOG_LEVEL=info
TIMEZONE=UTC

# Webhook Configuration (important for external integrations)
WEBHOOK_URL=http://localhost:5678

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (uncomment if using PostgreSQL instead of SQLite)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# POSTGRES_PASSWORD=secure_postgres_password_here

# =============================================================================
# Wildbox Platform Integration
# =============================================================================

# Main API Gateway
WILDBOX_API_GATEWAY_URL=http://wildbox-gateway:8000
WILDBOX_API_KEY=  # REQUIRED: set your Wildbox API key

# Individual Service URLs (if bypassing gateway)
WILDBOX_AGENTS_URL=http://open-security-agents:8001
WILDBOX_DATA_URL=http://open-security-data:8002
WILDBOX_IDENTITY_URL=http://open-security-identity:8001
WILDBOX_GUARDIAN_URL=http://open-security-guardian:8004
WILDBOX_RESPONDER_URL=http://open-security-responder:8018
WILDBOX_SENSOR_URL=http://open-security-sensor:8006

# =============================================================================
# Email Integration (for support workflows)
# =============================================================================

# IMAP Configuration for Support Email
SUPPORT_EMAIL_HOST=imap.your-domain.com
SUPPORT_EMAIL_PORT=993
SUPPORT_EMAIL_USER=support@wildbox.security
SUPPORT_EMAIL_PASSWORD=your_secure_email_password
SUPPORT_EMAIL_USE_TLS=true

# SMTP Configuration for Outbound Email
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USER=noreply@wildbox.security
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true

# =============================================================================
# Notification Services
# =============================================================================

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token
DISCORD_BOT_TOKEN=your_discord_bot_token

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Telegram Integration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://your-tenant.webhook.office.com/webhookb2/your_webhook

# =============================================================================
# External API Integrations
# =============================================================================

# GitHub (for issue creation and repository management)
GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_ORG=wildbox-security
GITHUB_REPO=internal-issues

# OSINT and Threat Intelligence APIs
VIRUSTOTAL_API_KEY=your_virustotal_api_key
SHODAN_API_KEY=your_shodan_api_key
CENSYS_API_ID=your_censys_api_id
CENSYS_SECRET=your_censys_secret
ALIENVAULT_API_KEY=your_alienvault_otx_api_key

# RSS Feeds for OSINT (comma-separated)
SECURITY_RSS_FEEDS=https://feeds.feedburner.com/TheHackersNews,https://krebsonsecurity.com/feed/,https://www.darkreading.com/rss.xml

# =============================================================================
# Content Management
# =============================================================================

# WordPress (for blog post automation)
WORDPRESS_URL=https://blog.wildbox.security
WORDPRESS_USERNAME=automation_user
WORDPRESS_PASSWORD=your_wordpress_password

# Documentation Systems
GITBOOK_TOKEN=your_gitbook_token
NOTION_TOKEN=your_notion_integration_token

# =============================================================================
# Security and Monitoring
# =============================================================================

# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=50

# Encryption Keys (generate secure random keys)
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_for_internal_auth

# Monitoring and Alerting
HEALTH_CHECK_INTERVAL=30
ALERT_THRESHOLD_ERROR_RATE=5
ALERT_THRESHOLD_RESPONSE_TIME=5000

# =============================================================================
# Development and Testing
# =============================================================================

# Development Mode
DEBUG=false
DEVELOPMENT_MODE=false

# Test Configuration
TEST_EMAIL=test@wildbox.security
TEST_WEBHOOK_URL=http://localhost:3000/test-webhook

# Mock Services (for testing without external dependencies)
USE_MOCK_SERVICES=false
MOCK_AI_RESPONSES=false

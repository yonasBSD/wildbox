# Wildbox Security Dashboard Environment Configuration

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Wildbox Security Dashboard"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_GATEWAY_URL=https://api.wildbox.local
NEXT_PUBLIC_IDENTITY_API_URL=http://localhost:8001
NEXT_PUBLIC_DATA_API_URL=http://localhost:8002
NEXT_PUBLIC_GUARDIAN_API_URL=http://localhost:8003
NEXT_PUBLIC_SENSOR_API_URL=http://localhost:8004
NEXT_PUBLIC_RESPONDER_API_URL=http://localhost:8018
NEXT_PUBLIC_AGENTS_API_URL=http://localhost:8006
NEXT_PUBLIC_CSPM_API_URL=http://localhost:8019

# Authentication
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Database (if needed for sessions)
DATABASE_URL=postgresql://user:CHANGE_ME@localhost:5432/dashboard

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Security
# ENCRYPTION_KEY should be server-side only, never exposed via NEXT_PUBLIC_
ENCRYPTION_KEY=your-encryption-key-here

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_REAL_TIME=true

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ANALYTICS_ID=

# Development
NEXT_PUBLIC_DEBUG=false

# Environment Configuration
ENVIRONMENT=development
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://secdata:CHANGE_ME@localhost:5432/securitydata
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=4
API_MAX_REQUESTS=1000
API_MAX_REQUESTS_JITTER=100
API_TIMEOUT=30
API_KEEP_ALIVE=2

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000

# Data Collection
COLLECTION_ENABLED=true
COLLECTION_INTERVAL=3600
MAX_CONCURRENT_COLLECTORS=10
COLLECTION_TIMEOUT=300
COLLECTION_RETRY_ATTEMPTS=3
COLLECTION_RETRY_DELAY=60
EXTERNAL_RATE_LIMIT_REQUESTS=100
EXTERNAL_RATE_LIMIT_WINDOW=60
VALIDATE_COLLECTION_DATA=true
SKIP_DUPLICATES=true

# Storage
DATA_RETENTION_DAYS=365
ARCHIVE_AFTER_DAYS=90
CLEANUP_INTERVAL=86400
FILE_STORAGE_PATH=./data/files
MAX_FILE_SIZE=104857600
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION=30

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
API_KEY_REQUIRED=false
API_KEY_HEADER=X-API-Key
MAX_QUERY_SIZE=10000
MAX_BATCH_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=false
SENTRY_ENABLED=false
SENTRY_DSN=

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=8000

# API Keys for External Services (Optional)
# ABUSEIPDB_API_KEY=your-api-key
# URLVOID_API_KEY=your-api-key
# VIRUSTOTAL_API_KEY=your-api-key
# SHODAN_API_KEY=your-api-key
